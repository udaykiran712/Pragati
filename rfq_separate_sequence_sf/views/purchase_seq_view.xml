<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_order_form_rfq" model="ir.ui.view">
        <field name="name">purchase.form.module.rfq</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fiscal_position_id']" position="after">
                <field name="sequence_name"/>
                <h1><field name="select_req" widget='radio'/></h1>
            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='partner_id']" position="before">
                <label for="select_req"/>
                <h3><field name="select_req" widget='radio' options="{'horizontal':true}"/></h3>
            </xpath>
            <xpath expr="//span[@class='o_form_label' and @attrs]" position="replace">
                <field name="select_req_bool" invisible="1"/>
                <span class="o_form_label" attrs="{'invisible': ['|',('select_req_bool', '=', False),('state','in',('purchase','cancel','done'))]}">Request for Quotation</span>
                <span class="o_form_label" attrs="{'invisible': ['|',('select_req_bool', '=', True),('state','in',('purchase','cancel','done'))]}">Draft PO</span>
            </xpath>

        </field>
        </record>    
    </data>
</odoo>
