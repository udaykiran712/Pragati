            <field name="name">All Treatment Rule</field>
            <field name="model_id" ref="model_hms_treatment"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('acs_hms_base.group_hms_manager'))]"/>
