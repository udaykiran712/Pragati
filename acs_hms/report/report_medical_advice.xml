<odoo>
    <template id="report_prescription_table">
        <table class="table table-ar" style="border: 2px solid black; border-collapse: collapse;">
            <thead>
                <tr style="border: 1px solid black;">
                    <th style="border: 1px solid black; text-align: center;">
                        <strong>Sr.No</strong>
                    </th>
                    <th style="border: 1px solid black; text-align: center;">
                        <strong>Medicine</strong>
                    </th>
                    <th style="border: 1px solid black; text-align: center;">
                        <strong>Allow Substitution</strong>
                    </th>
                     <th style="border: 1px solid black; text-align: center;">
                        <strong>Dosage1</strong>
                    </th>
                     <th style="border: 1px solid black; text-align: center;">
                        <strong>Dose1 Qty</strong>
                    </th>
                     <th style="border: 1px solid black; text-align: center;">
                        <strong>Dosage2</strong>
                    </th>
                     <th style="border: 1px solid black; text-align: center;">
                        <strong>Dose2 Qty</strong>
                    </th>
                     <th style="border: 1px solid black; text-align: center;">
                        <strong>Dosage3</strong>
                    </th>
                     <th style="border: 1px solid black; text-align: center;">
                        <strong>Dose3 Qty</strong>
                    </th>
                     <th style="border: 1px solid black; text-align: center;">
                        <strong>UOM</strong>
                    </th>
                     <th style="border: 1px solid black; text-align: center;">
                        <strong>Days</strong>
                    </th>
                     <th style="border: 1px solid black; text-align: center;">
                        <strong>Comments</strong>
                    </th>
                     
                </tr>
            </thead>
            <tbody>
                <t t-foreach="prescription.prescription_line_ids" t-as="line">

                    <tr style="border: 1px solid black;">
                        <t t-if="not line.display_type">

                            <td style="border: 1px solid black; text-align: center;">
                                <span t-esc="line_index + 1" style="font-size:12px; text-align: center;"/>
                            </td>
                            <td style="border: 1px solid black; text-align: center;">
                                <span t-field="line.sudo().product_id.name" style="font-size:12px;text-align: center;"/>
                            </td>

                            <td style="border: 1px solid black; text-align: center;">
                               <span t-field="line.allow_substitution" style="font-size:12px"/>
                            </td>

                            <td style="border: 1px solid black; text-align: center;">
                                <span t-if="line.befr_breakfast" t-field="line.befr_breakfast" style="font-size:12px; text-align: center;"/>
                                <span t-if="not line.befr_breakfast" t-field="line.befr_breakfast" style="font-size:12px; text-align: center;"/>
                            </td>
                            <td style="border: 1px solid black; text-align: center;">
                                <span t-field="line.bbf_qty" style="font-size:12px; text-align: center;"/>
                            </td>
                            <td style="border: 1px solid black; text-align: center;">
                                <span t-if="line.aft_bf" t-field="line.aft_bf" style="font-size:12px; text-align: center;"/>
                                <span t-if="not line.aft_bf" t-field="line.aft_bf" style="font-size:12px; text-align: center;"/>
                            </td>
                            <td style="border: 1px solid black; text-align: center;">
                                 <span t-field="line.af_qty" style="font-size:12px; text-align: center;"/>
                            </td>
                            <td style="border: 1px solid black; text-align: center;">
                                <span t-if="line.befr_lunch" t-field="line.befr_lunch" style="font-size:12px; text-align: center;"/>
                                <span t-if="not line.befr_lunch" t-field="line.befr_lunch" style="font-size:12px; text-align: center;"/>
                            </td>
                            <td style="border: 1px solid black; text-align: center;">
                                <span t-field="line.bl_qty" style="font-size:12px"/>
                            </td>
                            <td style="border: 1px solid black; text-align: center;">
                                <span t-field="line.dosage_uom_id" style="font-size:12px"/>
                            </td>
                            <td style="border: 1px solid black; text-align: center;">
                                <span t-field="line.days" style="font-size:12px"/>
                            </td>
                            <td style="border: 1px solid black; text-align: center;">
                                <span t-field="line.short_comment" style="font-size:12px"/>
                            </td>
                        </t>
                        <t t-if="line.display_type == 'line_section'">
                            <td style="border: 1px solid black; text-align: center;">
                                <span t-field="line.name" style="font-size:12px"/>
                            </td>
                        </t>
                        <t t-if="line.display_type == 'line_note'">
                            <td style="border: 1px solid black; text-align: center;">
                                <span t-field="line.name" style="font-size:12px"/>
                            </td>
                        </t>
                        
                    </tr>
                </t>
                <t t-foreach="prescription.treatment_line_ids" t-as="line">
                    <tr>
                        <t t-if="not line.display_type">
                            <td style="border: 1px solid black; text-align: center;">
                                <span t-esc="line_index + 1" style="font-size:12px"/>
                            </td>
                            <td style="border: 1px solid black; text-align: center;">
                                <span t-field="line.sudo().product_id.name" style="font-size:12px"/>
                            </td>
                        </t>
                    </tr>
                </t>
            </tbody>
        </table>
