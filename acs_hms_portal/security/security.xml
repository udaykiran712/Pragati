        <record id="hms_patient_portal_rule" model="ir.rule">
            <field name="name">Portal: Own Patient</field>
            <field name="model_id" ref="acs_hms_base.model_hms_patient"/>
            <field name="domain_force">['|',('acs_family_partner_ids','in',[user.commercial_partner_id.id]),('partner_id','=',user.commercial_partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
        </record>


