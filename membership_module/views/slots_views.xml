<odoo>
	<!-- ...............Action for  slots menu.............. -->
    <record id="action_for_slots" model="ir.actions.act_window">
        <field name="name">Slots</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">slots.description</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
             no records
            </p>
        </field>
    </record>
     
    <record id="view_for_slots_menu_form" model="ir.ui.view">
            <field name="name">slots.description.form</field>
            <field name="model">slots.description</field>
            <field name="arch" type="xml">
                <form string="slots">
                    <sheet>
                        <group>
                            <group>
                                <field name="slot_name"/>
                                <field name="plan_id"/>
                            </group>    
                            <group>
                                <field name="family_membership_id"/>
                                <field name="total_amount"/>
                            </group>    
                        </group>
                        <h1><label for='product_line_ids'/></h1>
                        <field name='product_line_ids'>
                            <tree editable="top">
                                <field name="product_id"/>
                                <field name="quantity"/>
                                <field name="uom"/>
                                <field name="uom_name" string="UOMs" invisible="1"/>
                                <field name="price_unit"/>
                                <field name="price_subtotal"/>
                            </tree>
                        </field>
                    </sheet>    
                </form>
            </field>    
    </record>  
     

    <record id="slots_menu_tree_view" model="ir.ui.view">
        <field name="name">slots.description.tree</field>
        <field name="model">slots.description</field>
        <field name="arch" type="xml">
            <tree>
                <field name="slot_name"/>
            </tree>
        </field>
    </record>
   

  
 

	<!-- ...............menu.............. -->

    <menuitem id="slots_menu_id" name="Slots" parent="member_ship_main_menu_id" action="action_for_slots"/>

    
                                  
</odoo>	