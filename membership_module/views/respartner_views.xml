<odoo>
	<record model="ir.ui.view" id="view_partner_form_inherit">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="plan_ids" widget="many2many_tags"/>
                    <field name="plan_count"/>
                    <field name="allocated_slots"/>
                    
                </xpath>
                <xpath expr="//page[@name='internal_notes']" position="after">
                    <page name="slots_page" string="Slots">
                        <field name="partner_slot_line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="slot_id"/>
                                <field name="slot_name"/>
                                <field name="slot_date"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

                <xpath expr="//page[@name='slots_page']" position="after">
                    <page name="Payment_slot_page" string="payment Slot Details">
                        <field name="partner_payment_slot_line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="slot_id"/>
                                <field name="product_name"/>
                                <field name="quantity"/>
                                <field name="uomName"/>
                                <field name="price_unit"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>


        <record id="cron_remove_past_slots" model="ir.cron">
            <field name="name">Slots Removing</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="code">model._cron_remove_slots()</field>
            <field name="active" eval="True"/>
        </record>

        <record id="cron_delivery_slots" model="ir.cron">
            <field name="name">Payment Slots Saving</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="code">model._cron_payment_slots_save()</field>
            <field name="active" eval="True"/>
        </record>

</odoo>	