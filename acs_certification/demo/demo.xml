<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <record id="fitness_certificate_certificate" model="certificate.template">
            <field name="name">Fitness Certificate</field>
            <field name="certificate_content" type="html">
                <p style="margin-bottom: 1rem; text-align: center;">
                    <span style='color: rgb(0, 0, 0); font-family: "lucida grande", Helvetica, Verdana, Arial, sans-serif;'>
                        <br/><br/>
                        <font style="font-size: 36px;" class="text-alpha">FITNESS CERTIFICATE<br/><br/>
                        </font>
                    </span>
                    <font color="#000000">
                        <span class="mt32 mb32" style="font-size: 18px;">I certify that I have carefully examined Mr./Ms.* <b>{{ object.partner_id.name }}</b>. Based on the examination, I certify that he/she is in good mental and physical health and is free from any physical defects which may interfere with his/her studies.Â including the active outdoor duties required of a professional.</span><br/><br/>
                    </font>
                    <p style="font-size: 20px; font-weight: bolder; text-align: center;">
                        <b>
                            <span >Thanks &amp; Regards<br/>
                            {{ object.user_id.name }}<br/>
                            {{ object.date }}</span>
                        </b>
                    </p>
                </p>
            </field>
        </record>

    </data>
</odoo>
