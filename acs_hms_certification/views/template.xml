<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="acs_certificate_details" name="Certificate Detail">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div id="certificate_content" class="col-12 col-lg mt32 mb64 o_portal_html_view shadow p-3" style="background-color: white;">
                        <t t-call="acs_certification.certificate_report_document">
                            <t t-set="doc" t-value="certificate.sudo()"/>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
