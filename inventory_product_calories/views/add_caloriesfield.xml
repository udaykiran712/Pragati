<odoo>
    <record id="add_calories_field_product_template" model="ir.ui.view">
        <field name="name">product template calories field</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="inside">
                <label for="calories_count" string="calories"/>
                <field name="calories_count"/>
            </xpath>
        </field>
    </record>
</odoo>
