<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_enable_wapp_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">sh.wapp.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="pos_interface_section" position="after">
                <h2 class="mt16">Whatsapp Configuration</h2>
                <div class="row mt16 o_settings_container">
                    <div id="autocomplete_address" class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_enable_whatsapp" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_enable_whatsapp" />
                        </div>
                    </div>
                </div>
                <br />
            </div>
        </field>
    </record>
</odoo>
