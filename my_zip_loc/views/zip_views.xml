<odoo>
    <record id="loction_zip_action" model="ir.actions.act_window">
        <field name="name">Location Zip</field>
        <field name="res_model">res.zip</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">No Records are Found</p>
        </field>
    </record>


    <record id="loction_zip_from_view" model="ir.ui.view">
        <field name="name">Location Zip form view</field>
        <field name="model">res.zip</field>
        <field name="arch" type="xml">
            <form>
                
                <group>
                    <field name="location_field"/>
                    <field name="zip_field"/>
                </group>
            </form>
        </field>
    </record>


    <record id="loction_zip_tree_view" model="ir.ui.view">
        <field name="name">Location Zip form view</field>
        <field name="model">res.zip</field>
        <field name="arch" type="xml">
            <tree>
                
                <field name="location_field"/>
                <field name="zip_field"/>
            </tree>
                
        
        </field>
    </record>

    <menuitem id="location_zip_id" name="zip location" action="loction_zip_action" parent="contacts.res_partner_menu_config"/>

</odoo>