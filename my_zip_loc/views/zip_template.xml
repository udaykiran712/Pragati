<odoo>
    <template id="auth_signup_form_inherit" inherit_id="auth_signup.fields">
        <xpath expr="//div" position="after">
            <div class="form-group field-zip_code">
                <label for="zip_code" class="control-label">ZIP Code</label>
                <select class="form-control" name="zip_code" t-attf-id="zip_code" required="required">
                    <option value="">Select ZIP Code...</option>
                </select>
            </div>
        </xpath>
    </template>
</odoo>
