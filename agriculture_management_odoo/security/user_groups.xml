<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_agriculture_management_odoo_groups">
        <field name="name">Agriculture Management</field>
        <field name="description">Category for Agriculture</field>
    </record>

    <record id="group_agri_management_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_agriculture_management_odoo_groups"/>
    </record>

    <record id="group_agri_management_admin" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_agriculture_management_odoo_groups"/>
        <field name="implied_ids" eval="[(6,0, [ref('agriculture_management_odoo.group_agri_management_user')])]"/>
    </record>

    <record id="rule_own_doc_of_crop_requests" model="ir.rule">
        <field name="name">View Own Docs</field>
        <field name="model_id" ref="model_crop_requests"/>
        <field name="domain_force">[('create_uid',
            '=', user.id)]
        </field>
        <field name="groups"
               eval="[(4, ref('agriculture_management_odoo.group_agri_management_user'))]"/>
    </record>

    <record id="rule_all_doc_crop_requests" model="ir.rule">
        <field name="name">View All Docs</field>
        <field name="model_id" ref="model_crop_requests"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups"
               eval="[(4, ref('agriculture_management_odoo.group_agri_management_admin'))]"/>
    </record>
