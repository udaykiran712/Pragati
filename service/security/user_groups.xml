<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="id_for_service_module_seperate">
        <field name="name">Services</field>
        <field name="description">Category for Services</field>
    </record>

    <record id="group_service_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="id_for_service_module_seperate"/>
    </record>

    <record id="group_service_admin" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="id_for_service_module_seperate"/>
        <field name="implied_ids" eval="[(6,0, [ref('service.group_service_user')])]"/>
    </record>

    <record id="rule_own_doc_of_service_order" model="ir.rule">
        <field name="name">View Own Docs</field>
        <field name="model_id" ref="model_service_order"/>
        <field name="domain_force">[('create_uid',
            '=', user.id)]
        </field>
        <field name="groups"
               eval="[(4, ref('service.group_service_user'))]"/>
    </record>

    <record id="rule_all_doc_service_order" model="ir.rule">
        <field name="name">View All Docs</field>
        <field name="model_id" ref="model_service_order"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups"
               eval="[(4, ref('service.group_service_admin'))]"/>
    </record>
    <record id="rule_own_doc_of_service_completion" model="ir.rule">
        <field name="name">View Own Docs</field>
        <field name="model_id" ref="model_service_completion"/>
        <field name="domain_force">[('create_uid',
            '=', user.id)]
        </field>
        <field name="groups"
               eval="[(4, ref('service.group_service_user'))]"/>
    </record>

    <record id="rule_all_doc_service_completion" model="ir.rule">
        <field name="name">View All Docs</field>
        <field name="model_id" ref="model_service_completion"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups"
               eval="[(4, ref('service.group_service_admin'))]"/>
    </record>
    <record model="ir.rule" id="service_order_rule">
        <field name="name">Service multi-company</field>
        <field name="model_id" search="[('model','=','service.order')]" model="ir.model"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record model="ir.rule" id="service_completion_rule">
        <field name="name">Purchase Request multi-company</field>
        <field name="model_id" search="[('model','=','service.completion')]" model="ir.model"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record model="ir.rule" id="service_order_line_rule">
        <field name="name">Service Line multi-company</field>
        <field name="model_id" search="[('model','=','service.order.line')]" model="ir.model"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record model="ir.rule" id="service_completion_line_rule">
        <field name="name">Purchase Request Line multi-company</field>
        <field name="model_id" search="[('model','=','service.completion.line')]" model="ir.model"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    
</odoo>