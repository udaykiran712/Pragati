<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="email_template_edi_service" model="mail.template">
            <field name="name">Service Order: Request For Service</field>
            <field name="model_id" ref="service.model_service_order"/>
            <field name="subject">{{ object.company_id.name }} Service Order (Ref {{ object.name or 'n/a' }})</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="email_from">{{ object.user_id.partner_id.name }}</field>
            <field name="description">Sent manually to vendor to request service</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear <t t-out="object.partner_id.name or ''">Vendor Name</t>
                        <t t-if="object.partner_id.parent_id">
                            (<t t-out="object.partner_id.parent_id.name or ''">Parent Company Name</t>)
                        </t>
                        <br/><br/>
                        Here is in attachment a request for service <span style="font-weight:bold;" t-out="object.name or ''">Service Order Reference</span>
                        <t t-if="object.vendor_refernce">
                            with vendor reference: <t t-out="object.vendor_refernce or ''">Vendor Reference</t>
                        </t>
                        from <t t-out="object.company_id.name or ''">Your Company Name</t>.
                        <br/><br/>
                        If you have any questions, please do not hesitate to contact us.
                        <br/><br/>
                        Best regards,
                        <t t-if="not is_html_empty(object.user_id.signature)">
                            <br/><br/>
                            <t t-out="object.user_id.signature or ''">Mitchell Admin</t>
                        </t>
                    </p>
                </div>
            </field>
            <field name="report_template" ref="service_order_seperate"/>
            <field name="report_name">Service_Order_{{ (object.name or '').replace('/','_') }}</field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>