<odoo>
    <template id="bank_payment_receipt_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout"> <br/> <br/> <br/> <br/> <br/>
                    <style>
                        .bordered-box {
                            border: 2px solid #000;
                            padding: 20px;
                            margin: 20px;
                            margin-top: -120px;
                            height: 100%; 
                            
                        }
                        .centered-heading {
                            text-align: center;
                            margin-bottom: 20px;
                        }
                        .table-top{
                            margin-top:40px;
                        }
                        .table-ar th, .table-ar td {
                            border: 1px solid black;
                            padding: 8px; 
                        }
                        .amount-in-box{
                            border: 2px solid #000;
                            padding: 30px;
                            margin:px;
                            height:10px;
                            width:200px;
                            text-align:center;
                        }
                    </style>
                    <div class="page bordered-box">
                        <h3 class="centered-heading"><strong>BANK PAYMENT RECEIPT</strong></h3>
                        <div class="mb-25 mt-3">
                            <div class="row">
                                <div class="col-6" t-if="o.journal_id">
                                    <strong>From Bank: </strong><span t-field="o.journal_id.name"/>
                                </div>
                                <div class="col-6" t-if="o.date">
                                    <strong>Payment Date: </strong><span t-field="o.date"/>
                                </div>
                            </div>
                          
                            <div class="row">
                                <div class="col-6" t-if="o.partner_id">
                                     <strong>Paid To:</strong> <span t-field="o.partner_id.name"/>
                                </div>
                                <div class="col-6" t-if="o.payment_method_id">
                                    <strong>Receipt Number: </strong><span t-field="o.name"/>
                                </div>
                            </div>
                        <!--     <div class="row">
                                <div class="col-6" t-if="o.amount">
                                    <strong>Payment Amount: </strong><span t-field="o.amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                 </div>
                                <div class="col-6" t-if="o.ref">
                                    <strong>Memo: </strong><span t-field="o.ref"/>
                                 </div>
                            </div> -->

                            <table class="table table-ar table-top" style="border: 2px solid black;height:150px;">
                                <thead>
                                    <tr>
                                      
                                        <td>Vendor Name</td>
                                        <td>Reference</td>
                                        <td>Amount</td>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    
                                    <tr>
                                  
                                        <td><t t-if="o.partner_id.name"/><t t-esc="o.partner_id.name"/></td>
                                        <td><t t-if="o.ref"/><t t-esc="o.ref"/></td>
                                        <td><t t-if="o.amount"/><t t-esc="o.amount"/></td>
                                        
                                    </tr>
                                
                                    
                                </tbody>
                            </table>
                            <div class="mb-2">
                                <strong>Amount In Word :</strong> <span t-field="o.amount_in_words"/>
                                <br/>
                                <strong>Narration :</strong> <span t-field="o.narration"/>
                                <br/>
                            </div>
                            <div class="bottom-section">
                                <div class="amount-in-box row">

                                    <strong class="rupees">Rs. </strong><strong><t t-if="o.amount"/><t t-esc="o.amount"/></strong>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-3" >
                                         <strong>Prepared By:</strong> 
                                    </div>
                                    <div class="col-3" >
                                        <strong>Checked By: </strong>
                                    </div>
                                    <div class="col-3" >
                                        <strong>Authorized By: </strong>
                                    </div>
                                    <div class="col-3" >
                                        <strong>Received By: </strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>

    </template>


    <record id="bank_payment_report" model="ir.actions.report">
        <field name="name">Bank Payment Receipt</field>
        <field name="model">account.payment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">pragati_custom_module.bank_payment_receipt_report</field>
        <field name="report_file">pragati_custom_module.bank_payment_receipt_report</field>
        <field name="binding_type">report</field>
        <field name="binding_model_id" ref="account.model_account_payment"/> <!-- Corrected reference -->
    </record>


</odoo>


