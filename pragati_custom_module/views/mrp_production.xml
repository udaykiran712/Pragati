<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Added manufacturing and expiry dates in MO -->
    <record id="mrp_production_view_form" model="ir.ui.view">
        <field name="name">mrp.production.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group//field[@name='user_id']" position="before">
                <field name="total_quantity" force_save="1"
                       attrs="{'invisible': [('state', 'not in', ['progress', 'done'])]}"/>
                <field name="product_quantity_loss"
                       attrs="{'invisible': [('state', 'not in', ['progress', 'done'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>



















