<odoo>
  <record id="view_pos_order_tree_inherit_payment_methods" model="ir.ui.view">
    <field name="name">pos.order.tree.inherit.payment.methods</field>
    <field name="model">pos.order</field>
    <field name="inherit_id" ref="point_of_sale.view_pos_order_tree"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='amount_total']" position="after">
        <field name="payment_methods_display" widget="text"/>
      </xpath>
    </field>
  </record>
</odoo>










