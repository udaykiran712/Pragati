<odoo>
    <record id="view_purchase_order_form_inherited" model="ir.ui.view">
        <field name="name">purchase.order.inherited</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group/field[@name='date_order']" position="after">
                <label for="pr_request_ids"/>
                <div class="o_row">
                    <field name="pr_request_ids" string="PR link" widget="many2many_tags" class="oe_inline"/>
                    <span>
                        <button name="action_open_product_selection_wizard" string="Submit" type="object"
                                class="btn-primary" data-hotkey="v"/>
                    </span>
                </div>
                <field name="pr_completion" invisible="1"/>
                <field name="approval_submit_id" readonly="1" invisible="1"/>
                <field name="reuse_button" groups="base.group_no_one"/>
                <field name="approve_status" widget="radio" options="{'horizontal':true}" invisible="1"/>
                <field name="request_owner_id" readonly="1"/>
                <label for="original_bills"/>
                <div class="o_row">
                    <field name="original_bills" string="Attachment" filename="original_bills_filename"/>
                    <span>
                        <button name="open_pdf_viewer" string="View" type="object" class="oe_highlight"/>
                    </span>
                </div>
                <field name="original_bill" invisible="1"/>
                <field name="category_id" groups='base.group_no_one'/>
            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='currency_id']" position="after">
                <field name="transport"/>
                <field name="transport_bill" invisible="1"/>
                <field name="delivery_terms_id"/>
                <field name="narration"/>
                <field name="warranty"/>
                <field name="amount_in_words"/>
                <field name="show_approve_button" invisible="1"/>
                <field name="show_reject_button" invisible="1"/>
            </xpath>

            <xpath expr="//form/sheet/group/group/field[@name='picking_type_id']" position="after">
                <field name="department_id" string="Department"/>
            </xpath>


            <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='delivery_terms_id']" position="after">
                <field name="payment_term_id"
                       attrs="{'readonly': ['|', ('invoice_status','=', 'invoiced'), ('state', '=', 'done')]}"
                       options="{'no_create': True}"/>
            </xpath>
            <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='product_qty']" position="after">
                <field name="last_purchase_cost"/>
                <field name="igst_tax" optional="hide"/>
                <field name="cgst_tax" optional="hide"/>
                <field name="sgst_tax" optional="hide"/>
                <field name="remaining_tax" optional="hide"/>
            </xpath>
            <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='product_id']" position="before">
                <field name="approvers_id" optional='hide'/>
                <field name="required_approved" optional='hide'/>
            </xpath>
            <xpath expr="//form/header/button[@name='print_quotation']" position="after">
                <button name="call_approval_request_submit" string="Submit" type="object" class="btn-primary"
                        data-hotkey="v" attrs="{'invisible':[('approve_status','=','approve')]}" states="draft,sent"/>
                <button name="action_reset_to_draft" string="Reset to Draft" type="object" class="btn-warning"/>
                <button name="action_approve" string="Approve" type="object" class="btn-primary" icon="fa-check"
                        attrs="{'invisible': [('show_approve_button', '=', False)]}"/>
                <button name="action_reject" string="Reject" type="object" class="btn-primary" icon="fa-check"
                        attrs="{'invisible': [('show_reject_button', '=', False)]}"/>
            </xpath>
            <xpath expr="//form/sheet/group" position="inside">
                <group string='Select Approvers Here'>
                    <field name='approval_level_1' attrs="{'readonly': [('approval_level_1', '!=', False)]}"
                           force_save="1"/>
                    <field name='approval_level_2' attrs="{'readonly': [('approval_level_2', '!=', False)]}"
                           force_save="1"/>
                    <field name='approval_level_3'/>
                </group>
            </xpath>
            <xpath expr="//form/header/button[@name='action_rfq_send']" position="replace">
                <button name="action_rfq_send" states="draft,waiting1,waiting2,waiting3,approve" string="Send by Email"
                        type="object" context="{'send_rfq':True}" class="oe_highlight" data-hotkey="g"/>
                <!-- <button name="action_rfq_send" states="sent,waiting1,waiting2,waiting3,approve" string="Re-Send by Email" type="object" context="{'send_rfq':True}" data-hotkey="g"/>
                <button name="action_rfq_send" states="purchase,waiting1,waiting2,waiting3,approve" string="Send PO by Email" type="object" context="{'send_rfq':False}" data-hotkey="g"/> -->
            </xpath>
            <xpath expr="//form/header/button[@name='button_confirm']" position="replace">
                <button name="button_confirm" type="object" states="sent,approve" string="Confirm Order"
                        context="{'validate_analytic': True}" class="oe_highlight" id="bid_confirm" data-hotkey="v"/>
            </xpath>
        </field>
    </record>
    <record id="view_purchase_order_tree_inherited" model="ir.ui.view">
        <field name="name">purchase.order.inherited</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='invoice_status']" position="after">
                <field name="approval_submit_id" optional="hide"/>
                <field name="approve_status" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_purchase_order_kpis_tree_inherited" model="ir.ui.view">
        <field name="name">purchase.order.inherited</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='date_order']" position="replace">
                <field name="date_planned" widget="remaining_days"/>
            </xpath>
            <xpath expr="//tree/field[@name='invoice_status']" position="after">
                <field name="approval_submit_id" optional="hide"/>
                <field name="approve_status" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>