<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit the stock.quant tree view used in update quantity -->
        <record id="hide_inventory_date_in_quant_tree" model="ir.ui.view">
            <field name="name">stock.quant.tree.inherit.hide.inventory.date</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
            <field name="arch" type="xml">
                <!-- Remove the inventory_date field -->
                <field name="inventory_date" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>

    </data>
</odoo>
