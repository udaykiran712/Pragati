<odoo>
    <record id="view_stock_picking_form_inherited" model="ir.ui.view">
        <field name="name">stock.picking.inherited</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group/field[@name='origin']" position="after">
                <field name="custom_picking_type" invisible="1"/>
                <field name="approval_id" domain="[('name', 'ilike', 'MI%')]" attrs="{'invisible': [('custom_picking_type', '!=', 'Issued Products')]}"/>
                <field name="bill_date" attrs="{'invisible': [('custom_picking_type', '!=', 'Receipts')]}"/>
                <field name="bill_ref_id" attrs="{'invisible': [('custom_picking_type', '!=', 'Receipts')]}"/>
                <field name="approval_submit_id" attrs="{'invisible': [('custom_picking_type', '!=', 'Receipts')]}" readonly="1" invisible="1"/>
                
                <label for="original_bill" attrs="{'invisible': [('custom_picking_type', '!=', 'Receipts')]}"/>
                <div class="o_row" attrs="{'invisible': [('custom_picking_type', '!=', 'Receipts')]}">
                    <field name="original_bill" attrs="{'invisible': [('custom_picking_type', '!=', 'Receipts')]}"/>
                    <span><button name="open_pdf_viewer" string="View" type="object" class="oe_highlight"/></span>
                </div>
                <field name="purchase_id" invisible="1"/>
                <field name="approve_status" widget="radio" options="{'horizontal':true}" attrs="{'invisible': [('custom_picking_type', '!=', 'Receipts')]}" invisible="1"/>
                <field name="category_id" groups="base.group_no_one"/>
                <field name="reuse_button" groups="base.group_no_one"/>
                <field name="qr_code_label" widget="image" invisible="1"/>
                <field name="show_approve_button" invisible = "1"/>
                <field name="show_reject_button" invisible = "1"/>
            </xpath>
            <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='quantity_done']" position="after">
                <field name="on_hand_qty"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,assigned,done,sign" />
            </xpath>
            <xpath expr="//form/header/button[@name='action_set_quantities_to_reservation']" position="before"> 
                <button name="call_approval_request_submit_stock_picking" string="Submit" type="object" class="btn-primary" data-hotkey="v" attrs="{'invisible':['|','|',('state','in', ['done','sign']),('custom_picking_type', '!=', 'Receipts'),('custom_picking_type', '!=', 'Internal Transfers'),('approve_status','=','approve')]}"/>
                <button name="action_reset_to_draft" string="Reset to Draft" type="object" class="btn-warning"/>
                <button name="action_approve" string="Approve" type="object" class="btn-primary" icon="fa-check" attrs="{'invisible': [('show_approve_button', '=', False)]}"/>
                <button name="action_reject" string="Reject" type="object" class="btn-primary" icon="fa-check" attrs="{'invisible': [('show_reject_button', '=', False)]}"/>
            </xpath>
            <xpath expr="//button[@name='button_validate']" position="replace">
                <button name="button_validate" attrs="{'invisible': [('state', 'in', ('waiting', 'confirmed')), ('show_validate', '=', False)]}" attrs_visible="{'invisible': [('state', '=', 'approve')]}" string="Validate" type="object" class="oe_highlight" groups="stock.group_stock_user" data-hotkey="v"/>

            </xpath>
            <xpath expr="//form/sheet/group" position="inside">
                <group string='Select Approvers Here' attrs="{'invisible': [('custom_picking_type', 'not in', ['Receipts', 'Internal Transfers'])]}">
                    <field name='approval_level_1'/>
                    <field name='approval_level_2'/>
                    <field name='approval_level_3'/>
                </group>
            </xpath>

        </field>
    </record>

    <record id="view_stock_move_tree_view_inherited" model="ir.ui.view">
        <field name="name">stock.move.inherited</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='location_dest_id']" position="after">
                <field name="warehouse_id"/>
                <field name="received_qty"/>
                <field name="issued_qty"/>
                <field name="balance_qty"/>
                <field name="balance_value"/>
                <field name="average_value"/>
                <field name="total_wo_tax"/>
                <field name="total"/>
                <field name="partner_name"/>
            </xpath>
            <xpath expr="//tree/field[@name='product_uom_qty']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>


    <template id="sale_order_portal_content_inherit_sale_stock"
        inherit_id="sale.sale_order_portal_content">

        <xpath expr="//div[@id='informations']" position="inside">
            <t t-if="delivery_orders">
                <div>
                    <strong>Delivery Orders</strong>
                </div>
                <div>
                    <t t-foreach="delivery_orders" t-as="picking">
                        <t t-set="delivery_report_url"
                           t-value="'/my/picking/pdf/%s?%s' % (picking.id, keep_query())"/>
                        <div name="delivery_order"
                            class="d-flex flex-wrap align-items-center justify-content-between">
                            <div name="delivery_details">
                                <a t-att-href="delivery_report_url">
                                    <span t-esc="picking.name"/>
                                </a>
                                <div class="small d-lg-inline-block ms-3">
                                    Date:
                                    <span class="text-muted"
                                        t-field="picking.date_done"
                                        t-options="{'date_only': True}"/>
                                    <span t-if="picking.state in ['draft', 'waiting', 'confirmed', 'assigned']"
                                        class="text-muted"
                                        t-field="picking.scheduled_date"
                                        t-options="{'date_only': True}"/>
                                </div>
                            </div>
                            
                            <!-- Add the new span for 'Delivered' state -->
                            <span t-if="picking.state == 'sign'"
                                class="small badge text-bg-success orders_label_text_align">
                                <i class="fa fa-fw fa-truck"/> <b>Delivered</b>
                            </span>
                        </div>
                    </t>
                </div>
            </t>
        </xpath>
    </template>
</odoo>


