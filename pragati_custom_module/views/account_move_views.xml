<odoo>
    <record id="view_account_move_form_inherited" model="ir.ui.view">
        <field name="name">account.move.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group/field[@name='partner_id']" position="after">
                <field name="tds_apply" widget="radio" options="{'horizontal':true}"/>
                <label for="original_bill"/>
                <div class="o_row">
                    <field name="original_bill"/>
                    <span><button name="open_pdf_viewer" string="View" type="object" class="oe_highlight"/></span>
                </div>
                <!-- <field name="original_bill"/> -->
                <field name="bill_reference"/>
                <field name="stock_name" invisible='1'/>
                <field name ="schedule_date" invisible='1'/>
                <field name="journal_id_name" invisible="1"/>
            </xpath>
            <xpath expr="//form/sheet/group/group/field[@name='partner_bank_id']" position="after">
                <field name="account_approval_id" widget="many2one_tags"/>
                <field name="account_approval_status" widget="radio" options="{'horizontal':true}"/>
                <field name="request_owner_id" widget="many2one_tags"/>
                <field name="category_id" widget="many2one_tags" invisible="1"/>
            </xpath>
            <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='tax_ids']" position="after">
                <field name="mrp_price"/>
                <field name="igst_tax_char" optional="hide"/>
                <field name="igst_tax" optional="hide"/>
                <field name="sgst_tax_char" optional="hide"/>
                <field name="sgst_tax" optional="hide"/>
                <field name="cgst_tax_char" optional="hide"/>
                <field name="cgst_tax" optional="hide"/>
                <field name="rem_tax_char" optional="hide"/>
                <field name="remaining_tax" optional="hide"/>
            </xpath>
            <xpath expr="//form/header/button[@name='action_post']" position="after">
                <button name="action_for_account_move_submit" string="Submit" class="oe_highlight" type="object" data-hotkey="v"
                attrs="{'invisible': ['|',('move_type', '!=', 'in_invoice'),('state', '!=', 'draft')]}"/>
                <button name="action_reset_to_draft" string="Reset to Draft" type="object" class="btn-warning"/>
            </xpath>
            <xpath expr="//form/sheet/group" position="inside">
                <group string='Select Approvers Here' attrs="{'invisible': ['|',('move_type', '!=', 'in_invoice'),('state', '!=', 'draft')]}">
                    <field name='approval_level_1'/>
                    <field name='approval_level_2'/>
                    <field name='approval_level_3'/>
                </group>
            </xpath>
        </field>
    </record>
    <record id="view_account_move_filter_inherit" model="ir.ui.view">
        <field name="name">account.move.filter.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <!-- Add other fields from the existing view -->
            </field>
        </field>
    </record>
    <record id="view_account_move_line_report_filter_inherit" model="ir.ui.view">
        <field name="name">account.move.linefilter.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped_partner"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_currency']" position="after">
                <field name="tax_base_amount"/>
                <field name="igst_tax_char" optional="hide"/>
                <field name="igst_tax" optional="hide"/>
                <field name="cgst_tax_char" optional="hide"/>
                <field name="cgst_tax" optional="hide"/>
                <field name="sgst_tax_char" optional="hide"/>
                <field name="sgst_tax" optional="hide"/>
                <field name="rem_tax_char" optional="hide"/>
                <field name="remaining_tax" optional="hide"/>
            </xpath>
        </field>
    </record>
    <record id="view_account_move_line_grouped_sales_purchases_report_filter_inherit" model="ir.ui.view">
        <field name="name">account.move.linefilter.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree_grouped_sales_purchases"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_currency']" position="after">
                <field name="tax_base_amount"/>
                <field name="igst_tax_char" optional="hide"/>
                <field name="igst_tax" optional="hide"/>
                <field name="cgst_tax_char" optional="hide"/>
                <field name="cgst_tax" optional="hide"/>
                <field name="sgst_tax_char" optional="hide"/>
                <field name="sgst_tax" optional="hide"/>
                <field name="rem_tax_char" optional="hide"/>
                <field name="remaining_tax" optional="hide"/>
            </xpath>
        </field>
    </record>


    <record id="view_account_payment_form_nar_word" model="ir.ui.view">
        <field name="name">account.payment.form.nar.word</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <field name="ref" position="before">
                <field name="amount_in_words"/>
                <field name="narration" />
            </field>
        </field>
    </record>


</odoo>
