<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_delivery_terms_tree" model="ir.ui.view">
        <field name="name">delivery.terms.tree</field>
        <field name="model">delivery.terms</field>
        <field name="arch" type="xml"> 
            <tree>
                <field name="delivery_terms"/>
            </tree>
        </field>
    </record>

    <record id="view_delivery_terms_form" model="ir.ui.view">
        <field name="name">delivery.terms.form</field>
        <field name="model">delivery.terms</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="delivery_terms"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
</odoo>