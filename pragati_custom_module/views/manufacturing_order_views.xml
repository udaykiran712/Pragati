
<odoo>
    <record id="mrp_production_form_for_view_inherited" model="ir.ui.view">
        <field name="name">mrp.production.inherited</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook/page/field/tree/field[@name='quantity_done']" position='after'>
                <field name='on_hand_qty'/>
            </xpath>
            <!-- <xpath expr="//form/sheet/group/group" position='inside'>
                <field name='pr_request_id'/>
            </xpath> -->
            <xpath expr="//form/header" position='inside'>
                <!-- <button name="action_convert_purchase_request" string="Request PR" class="oe_highlight" type="object" data-hotkey="v"/> -->
                <button name="action_update_component_quantities" string="Update Qty's" class="oe_highlight" type="object" data-hotkey="v" states="confirmed,progress,to_close"/>
            </xpath>
        </field>
    </record>
</odoo>