<odoo>
    <record id="view_pos_pos_form_add_total_qty" model="ir.ui.view">
        <field name="name">pos.order.form.add.total.qty</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='products']/field[@name='lines']" position="after">
                <div style="margin-left: 340px; margin-top: 3px;">
                    <label for="total_qty" string="Total Quantity:" style="margin-right: 8px;"/>
                    <field name="total_qty" readonly="1" nolabel="1"/>
                </div>
            </xpath>
        </field>
    </record>


    <record id="view_pos_order_tree_add_total_qty" model="ir.ui.view">
        <field name="name">pos.order.tree.add.total.qty</field>
        <field name="model">pos.order</field>
        <field name="inherit_id"
               ref="point_of_sale.view_pos_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="total_qty" string="Total Quantity" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
