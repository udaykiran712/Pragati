<odoo>
    <record id="view_picking_form_inherit_attachment" model="ir.ui.view">
        <field name="name">stock.picking.form.attachment</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Add Attachment Field immediately after reuse_button -->
            <field name="reuse_button" position="after">
                <div class="o_row">




                        <label for="original_bills"/>

                        <field name="original_bills" string="Attachment" filename="original_bills_filename"/>




                        <div style="margin-left:100px;">
                            <button name="open_pdf_viewer" string="View" type="object" class="oe_highlight"
                                    />
                        </div>



                </div>
                <field name="original_bills_filename" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>