<odoo>
<!--  Inherit the Invoice Analysis tree view  -->
<record id="view_account_invoice_report_tree_pos_inherit" model="ir.ui.view">
<field name="name">account.invoice.report.tree.inherit.pos</field>
<field name="model">account.invoice.report</field>
<field name="inherit_id" ref="account.account_invoice_report_view_tree"/>
<field name="arch" type="xml">
<xpath expr="//field[@name='product_id']" position="after">
<field name="pos_name" string="POS Name"/>
</xpath>
</field>
</record>
<!--  Inherit the Invoice Analysis search view to add Group By POS Name  -->
<record id="view_account_invoice_report_search_pos_inherit" model="ir.ui.view">
<field name="name">account.invoice.report.search.inherit.pos</field>
<field name="model">account.invoice.report</field>
<field name="inherit_id" ref="account.view_account_invoice_report_search"/>
<field name="arch" type="xml">
<!--  Use a valid selector: group[expand='1'] (Group By section)  -->
<xpath expr="//group[@expand='1']" position="inside">
<filter name="group_by_pos_name" string="POS Name" context="{'group_by': 'pos_name'}"/>
</xpath>
</field>
</record>
</odoo>




