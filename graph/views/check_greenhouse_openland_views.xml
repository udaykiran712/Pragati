<odoo>
    <data>
        <record id="add_field_stock_location" model="ir.ui.view">
            <field name="name">adding field check greenhouse openland</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='location_id']" position="after">
                    <group>
                        <label for="check_greenhouse_openland" string="Select Type Of Land"/>
                        <h1><field name="check_greenhouse_openland" widget="radio" attrs="{'invisible': [('location_id', '!=', False)]}" /></h1>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
