<odoo>
    <template id="adding_pest_template" name="Adding Pest Template">
        <t t-call="website.layout">
            <t t-set="title">Adding Pest</t>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/graph layout"><i class="fa fa-home"/></a></li>
                    <li class="breadcrumb-item"><a href="/graph">Net Houses</a></li>
                    <li  class="breadcrumb-item"><a  t-att-href="'/graph/' + greenhouse">Zones</a></li>
                     <li  class="breadcrumb-item"><a  t-att-href="'/graph/' + greenhouse +'/'+ pest_zone  ">Add Pest</a></li>


                </ol>
            </nav>

            <div class="adding-menure-container">
                <form role="form" action="/submit_pest" method="post">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="form-group">
                        <div class="just-form">
                            <div class="full-form" >
                                <div class="left-side-form">
                                
                                    <div class="fields-style">
                                        <div class="label-style">

                                            <label for="location_dest_id">Net House ID:</label>
                                        </div>
                                        <div class="input-style">

                                            <input type="text" id="location_dest_id" name="location_dest_id" t-att-value="greenhouse_record" required="required" readonly="readonly"/>
                                        </div>
                                    </div>
                                    <div class="fields-style">
                                        <div class="label-style">

                                            <label for="pest_zone">Zone IDS:</label>
                                        </div>
                                        <div class="input-style">
                                            <input type="text" id="pest_zone" name="pest_zone" t-att-value="pest_zone" required="required" readonly="readonly"/>
                                        </div>
                                    </div>
                                    <div class="fields-style">
                                        <div class="label-style">

                                            <label for="location_id">Source Location:</label>
                                        </div>
                                        <div class="input-style">
                                            <select id="location_id" name="location_id" style="height:35px; width: 220px;background-color:#e1e7f0;" required="required" t-att-data-greenhouse="greenhouse">
                                                <option value="">Select location</option>
                                                <t t-foreach="source_locations " t-as="location">
                                                    <option t-att-value="location.id" ><t t-esc="location.location_id.name"/>/<t t-esc="location.name"/></option>
                                                </t>
                                            </select>

                                            
                                        </div>

                                    </div>
                                    <div class="fields-style">
                                        <div class="label-style">

                                            <label for="crop_id">Crop Name:</label>
                                        </div>
                                        <div class="input-style">
                                            <select id="crop_id" name="crop_id" style=" height:35px;
                                                width:220px;background-color:#e1e7f0;" required="required">
                                                <option value="">Select Crop</option>
                                                <t t-foreach="matched_crop_records" t-as="crop">
                                                    <option t-att-value="crop.id" ><t t-esc="crop.product_id.name"/>(<t t-esc="crop.ref"/>)(<t t-esc="crop.state"/>)</option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="fields-style">
                                        <div class="label-style">

                                            <label for="pest_bed">Bed IDS:</label>
                                        </div>
                                        <div class="input-style">
                                            <input type="text" id="pest_bed" name="pest_bed" required="required" readonly="readonly"/>
                                        </div>
                                    </div>
                                

                                    
                                    <div class="fields-style">
                                        <div class="label-style">

                                            <label for="product_id_pest">Pest Name:</label>
                                        </div>
                                        <div class="input-style">
                                            <select name="product_id_pest" style=" height:35px;
                                                width:220px;background-color:#e1e7f0;" required="required">
                                                <option value="">Select Pest</option>
                                                <t t-foreach="matched_pest_records" t-as="pest">
                                                    <option t-att-value="pest.id" ><t t-esc="pest.name"/></option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="fields-style">
                                        <div class="label-style">

                                            <label for="disease">Disease Name:</label>
                                        </div>
                                        <div class="input-style">

                                            <select name="disease" style=" height:35px;
                                                width:220px;background-color:#e1e7f0;;" required="required">
                                                <option value="">Select Disease</option>
                                                <t t-foreach="matched_disease_records" t-as="d">
                                                    <option t-att-value="d.id"><t t-esc="d.name"/></option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="fields-style">
                                        <div class="label-style">

                                            <label for="picking_type_id">Operation Type:</label>
                                        </div>
                                        <div class="input-style">
                                            <select id="picking_type_id" name="picking_type_id" style="height:35px; width: 220px;background-color:#e1e7f0;" required="required" t-att-data-greenhouse="greenhouse">
                                                <option value="">Select Transfer Type</option>
                                                <t t-foreach="operation_types " t-as="operation">
                                                    <option t-att-value="operation.id" ><t t-esc="operation.warehouse_id.name"/>:<t t-esc="operation.name"/></option>
                                                </t>
                                            </select>

                                            
                                        </div>

                                    </div>
                                    <div class="fields-style">
                                        <div class="label-style">
                                            <label for="stock_change_pest">Quantity(Kg's):</label>
                                        </div>
                                        <div class="input-style">
                                            <input type="text" id="stock_change_pest" name="stock_change_pest" required="required"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <button class="submit-menure-btn" type="submit">SUBMIT</button>
                            </div>


                        </div>
                    </div>  

                </form>
            </div>
        </t>
    </template>
    <template id="successful_pest_record_template" name="Success Pest page">
        <t t-call="website.layout">
            <t t-set="title">successful</t>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/graph layout"><i class="fa fa-home"/></a></li>
                    <li class="breadcrumb-item"><a href="/graph">Net Houses</a></li>
                   

                </ol>
            </nav>
            <div class="successful-msg">
                <h1>Pest Record Is Successfully Created!</h1>
            </div>
        </t>
    </template>

</odoo>