
<odoo>

  <!-- 
   -->
    <record id="graph_layout" model="website.menu">
        <field name="name">Graph Plotting</field>
        <field name="url">/graph layout</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence" type="int">80</field>
    </record>



    <template id="graph_page_template_layout" name="Graph Page">
        <t t-call="website.layout">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/graph layout"><i class="fa fa-home"/></a></li>
                </ol>
            </nav>
            
            <div class="my-layout-container">
                <div class="my-l-container">
                    <h1 class="land-layout">Land Layout</h1>
                    <div class="g box-1" id="g-a"><a t-att-href="'/graph'" >Green House-A</a></div>
                    <div class="g box-2" id="g-b"><a t-att-href="'/graph'">Green House-B</a></div>
                    <div class="g box-3" id="g-c"><a t-att-href="'/graph'">Green House-C</a></div>
                    <div class="g box-4" id="g-d"><a t-att-href="'/graph'">Green House-D</a></div>
 
                </div>
            </div>
        </t>
    </template>


    <!-- ******************************graph template************************************************* -->


    <template id="graph_greenhouses_openland_template" name="Greenhouses openlands page">
        <t t-call="website.layout">
            <t t-set="title">Graph Plotting</t>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/graph layout"><i class="fa fa-home"/></a></li>

                </ol>
            </nav>
        

            <div class="locations-container">
                <div>
                    <h1 class="heading-stock-location">Green Houses Lands</h1>
                </div>
             
                <div class="greenhouse-boxes" id="greenhouses-container">
                    <t t-foreach="greenhouses_records" t-as="greenhouse">

                        <div class="location-box">
                            <span class="location-side-heading">Parent Location:</span><span class="location-name"><a t-att-href="'/graph/'+greenhouse.name"><t t-esc="greenhouse.name"/></a></span>
                            <div class="zone-list">
                                <div>
                                    <span class="location-side-heading">Zones:</span>
                                <!-- <div class="zone_names"> -->
                                    <t t-foreach="greenhouses_zones_records" t-as="zones">

                                        <t t-if="zones.location_id.name == greenhouse.name">
                                             <span class="zone-area-values"><t  t-esc="zones.name"/>,</span> 
                                         </t>
                                     </t>
                                 <!-- </div> -->

                                </div>
                                <div>
                                    <span class="location-side-heading">Net Area In (sq'yds): </span><span class="zone-area-values"><t  t-esc="greenhouse.net_area"/></span>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>
          

       
                <div class="open-land-boxes">
                    <div>
                        <h1 class="heading-stock-location">Open Lands</h1>
                    </div>
                    <div class="greenhouse-boxes" id="greenhouses-container">
                        <t t-foreach="openlands_records" t-as="openland">

                            <div class="location-box">
                                <span class="location-side-heading">Parent Location:</span><span class="location-name"><a t-att-href="'/graph/'+openland.name"><t t-esc="openland.name"/></a></span>
                                <div class="zone-list">
                                    <div>
                                        <span class="location-side-heading">Zones:</span>
                                    <!-- <div class="zone_names"> -->
                                        <t t-foreach="openlands_zones_records" t-as="zones">

                                            <t t-if="zones.location_id.name == openland.name">
                                                 <span class="zone-area-values"><t  t-esc="zones.name"/>,</span> 
                                             </t>
                                         </t>
                                     <!-- </div> -->

                                    </div>
                                    <div>
                                        <span class="location-side-heading">Net Area In (sq'yds): </span><span class="zone-area-values"><t  t-esc="openland.net_area"/></span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
          
                </div>
                

                
            </div>
        </t>
    </template>

