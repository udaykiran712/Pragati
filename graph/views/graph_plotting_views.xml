    <template id="greenhouse_crop_planning_info_template" name="greenhouse Bed crop planning info Page">
        <t t-call="website.layout">
            <t t-set="title"><t t-esc="greenhouse"/></t>
            
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/graph layout"><i class="fa fa-home"/></a></li>
                    <li class="breadcrumb-item"><a href="/graph">Net Houses</a></li>
                    <li  class="breadcrumb-item"><a t-att-href="'/graph/' + greenhouse">Zones</a></li>
                    <li  class="breadcrumb-item"><a t-att-href="'/graph/' + greenhouse+'/'+zone">Crop Planning</a></li>

                </ol>
            </nav>
            <div class="full-container">

                <div class="left-side-part">
                    <div class="color-indicators">
                        <h1 style="color:black; font-weight:bold; font-family: Robotic; font-size:15px;">Beds status</h1>
                        <label><span class="color-box" style="background-color:grey;"></span>Bed is Empty</label><br/>
                        <label><span class="color-box" style="background-color:#03131f;"></span>Crop is in Draft State</label><br/>
                    </div>
                </div>

                <div class="middle-side-part">
                    <h1 class="stock-head ">Beds for: <t t-esc="greenhouse"/> - <t t-esc="zone"/></h1>
                    
                    <div class="bed-boxes" >

                        <t t-foreach="greenhouse_beds_records" t-as="bed_info">
                            <t t-if="bed_info and len(bed_info)>=2"/>
                            <div class="bed-item" t-att-data-bedname="bed_info.name" t-att-data-cropname="bed_info.planning_id.product_id.name" t-att-data-greenhousename="greenhouse" t-att-data-zonename="zone" t-att-data-bedstate="bed_info.planning_id.state" t-att-data-bedid="bed_info.id">
                                <!-- <input type="checkbox" class="bed-checkbox"/> -->
                                <div>
                                    <span class="bed-name">Name:<t t-esc="bed_info.name"/></span><br/>
                                    <span class="bed-name">Length:<t t-esc="bed_info.bed_length"/>(sq'ft)</span><br/>
                                    <span class="bed-name">Crop:<t t-esc="bed_info.planning_id.product_id.name"/></span><br/>
                                </div>
                            </div>
                        </t>
            
                        <t t-if="not greenhouse_beds_records">
                            <div class="no-beds-container">
                                <span class="no-records">There are no beds available in <t t-esc="zone"/></span><br/>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>
