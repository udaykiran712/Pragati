<odoo>

    <record id="res_partner_view_form" model="ir.ui.view" >
        <field name="name">res.partner.view.form.inherit.approval</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
           <xpath expr="//form/div[1]" position="after">
                <header>
                <button name="action_approve_contact" class="oe_highlight" states="draft" string="Approve" type="object" help="Approve Contact" groups="contact_approval.group_contacts_approval"/>
                <button name="action_cancel_contact" class="oe_highlight" states="draft" string="Cancel" type="object" help="Cancel Contract" groups="contact_approval.group_contacts_approval"/>
                <button name="action_reset_contact" class="oe_highlight" states="approve,cancel" string="Reset" type="object" help="Reset Contract" groups="contact_approval.group_contacts_approval"/>
                <field name="state" widget="statusbar"/>
                </header>
            </xpath>
            <xpath expr="//div[hasclass('o_address_format')]" position="after">
                <field name="approver_id"/>
            </xpath>
        </field>
    </record>

    <record id="action_contacts_manager_approval" model="ir.actions.server" >
        <field name="name">Approve</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="binding_model_id" ref="model_res_partner" />
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_approve_contact()
        </field>
    </record>

    <record id="action_contacts_manager_cancel" model="ir.actions.server" >
        <field name="name">Cancel</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="binding_model_id" ref="model_res_partner" />
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_cancel_contact()
        </field>
    </record>

    <record id="res_partner_view_search" model="ir.ui.view">
        <field name="name">res.partner.view.search.inherit.approval</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='type_company']" position="after">
                <filter name="type_state" string="State"
                        context="{'group_by': 'state'}"/>
            </xpath>
        </field>
    </record>

</odoo>
