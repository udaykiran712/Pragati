<odoo>
    <record id="ledger_payment_transction_form" model="ir.ui.view">
        <field name="name">ledger.payment.form</field>
        <field name="model">ledger.payment</field>
        <field name="arch" type="xml">
            <form string="Internal Transactions">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary"/>
                    <button name="submit_reconciliation_records" type="object" string="Reconcile" class="btn-primary" states='post'/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_internal_journal_entries" type="object"
                            class="oe_stat_button" icon="fa-bars">
                            <div class="o_stat_info">
                                <field name="journal_entries" class="o_stat_value"/>
                                <span class="o_stat_text">Journal Entries</span>
                            </div>
                        </button>
                    </div>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="ledger_or_bill" invisible="1"/>
                            <field name="date"/>
                            <field name="boole" widget="radio" groups='base.group_no_one'/>
                            <field name="amount"/>
                            <field name="reconciled_amount" states='post,recocile'/>
\                            <field name="amount_paid" states='recocile'/>

                            <!-- <field name="relation_id"/> -->
                        </group>
                        <group>
                            <field name="source_acc"/>
                            <field name="dest_acc"/>
                            <field name="journal_id"/>
                            <field name="company_id"/>
                            <field name="is_complete_trans" groups='base.group_no_one'/>
                            <field name="transaction_id" groups='base.group_no_one'/>
                        </group>
                        <group>
                            <field name="remarks"/>
                        </group>
                    </group>
                    <notebook states='post,recocile'>
                        <page>
                            <div class="text-center">
                                <input type="text" placeholder="Search for invoice..." id="rayazorpaySearch" name="payment_search"/>
                            </div>
                            <field name="bank_manual_line_ids">
                                <tree editable="bottom">
                                    <field name="is_manual_reconcile"/>
                                    <field name="name" />
                                    <field name="provider_reference"/>
                                    <field name="customer_name" string="Customer Name"/>
                                    <field name="date"/>
                                    <field name="amount"/>

                                    <field name="ledger_pay_id" invisible="1"/>
                                    <field name="invoice_id"/>
                                    <field name="manual_reconcile_amount"/>
                                    <field name="commsn"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    

    <record model="ir.ui.view" id="ledger_payment_transaction_tree">
        <field name="name">ledger.payment.list</field>
        <field name="model">ledger.payment</field>
        <field name="arch" type="xml">
            <tree string="Patient Evaluation">
                <!-- <field name="boole"/> -->
                <!-- <field name="patient_id"/> -->
                <field name="name"/>
                <!-- <field name="state"/> -->
                <!-- <field name="company_id" groups="base.group_multi_company"/> -->
            </tree>
        </field>
    </record>


    




    <record id="ledger_payment_transaction_action" model="ir.actions.act_window">
        <field name="name">Bank Receipts</field>
        <field name="res_model">ledger.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="gft_inter_account.ledger_payment_transaction_tree"/>
         <field name="domain">[('ledger_or_bill', '=', 'ledger')]</field> 
        <field name="context">{'default_ledger_or_bill': 'ledger'}</field>

    </record>

    




    <menuitem id="ledger_payment_transaction_main" 
        name="Bank Receipts" 
        parent="account.menu_finance_receivables" 
        action="ledger_payment_transaction_action"
        sequence="6"/>
    
</odoo>
