<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_bfa_and_pa_requests">
        <field name="name">Bills Approvals &amp; Payment Advice</field>
        <field name="description">Category for BA &amp; PA</field>
    </record>

    <record id="group_bills_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_bfa_and_pa_requests"/>
    </record>

    <record id="group_bills_admin" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_bfa_and_pa_requests"/>
        <field name="implied_ids" eval="[(6,0, [ref('bfa_and_pa_requests.group_bills_user')])]"/>
    </record>

    <record id="rule_own_doc_of_bills_approvals" model="ir.rule">
        <field name="name">View Own Docs</field>
        <field name="model_id" ref="model_bills_approval"/>
        <field name="domain_force">[('create_uid',
            '=', user.id)]
        </field>
        <field name="groups"
               eval="[(4, ref('bfa_and_pa_requests.group_bills_user'))]"/>
    </record>

    <record id="rule_all_doc_bills_approvals" model="ir.rule">
        <field name="name">View All Docs</field>
        <field name="model_id" ref="model_bills_approval"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups"
               eval="[(4, ref('bfa_and_pa_requests.group_bills_admin'))]"/>
    </record>
    <record id="rule_own_doc_of_payment_advice_for_groups" model="ir.rule">
        <field name="name">View Own Docs Payments</field>
        <field name="model_id" ref="model_payment_advice"/>
        <field name="domain_force">[('create_uid',
            '=', user.id)]
        </field>
        <field name="groups"
               eval="[(4, ref('bfa_and_pa_requests.group_bills_user'))]"/>
    </record>

    <record id="rule_all_doc_payment_advice" model="ir.rule">
        <field name="name">View All Docs</field>
        <field name="model_id" ref="model_payment_advice"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups"
               eval="[(4, ref('bfa_and_pa_requests.group_bills_admin'))]"/>
    </record>
    <record model="ir.rule" id="bills_approval_rule">
        <field name="name">Bills Approval multi-company</field>
        <field name="model_id" search="[('model','=','bills.approval')]" model="ir.model"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record model="ir.rule" id="payment_advice_rule">
        <field name="name">Payment Advice multi-company</field>
        <field name="model_id" search="[('model','=','payment.advice')]" model="ir.model"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record model="ir.rule" id="bills_approval_line_rule">
        <field name="name">Bills Approval Line multi-company</field>
        <field name="model_id" search="[('model','=','bills.approval.line')]" model="ir.model"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record model="ir.rule" id="payment_advice_line_rule">
        <field name="name">Payment Advice Line multi-company</field>
        <field name="model_id" search="[('model','=','payment.advice.line')]" model="ir.model"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    
</odoo>