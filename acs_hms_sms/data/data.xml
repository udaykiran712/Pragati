<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <record id="patient_registartion_sms_template" model="acs.sms.template">
            <field name="name">Patient Registartion Message</field>
            <field name="message">Dear {{ object.name }}, Your Patient Registartion No. is: {{ object.code }} in AlmightyCS Hospital. Sent by ACS HMS</field>
        </record>

        <record id="appointment_registartion_sms_template" model="acs.sms.template">
            <field name="name">Appointment Confirmation Message</field>
            <field name="message">Dear {{ object.patient_id.name }}, Your Appointment {{ object.name }} Registartion No. is confirmed at AlmightyCS Hospital. Sent by ACS HMS</field>
        </record>

        <record id="acs_reminder_sms_template" model="acs.sms.template">
            <field name="name">Appointment Reminder Message</field>
            <field name="message">Dear {{ object.patient_id.name }}, Reminder for your Appointment {{ object.name }} at AlmightyCS Hospital. Sent by ACS HMS {{ date.strftime('''%Y-%m-%d''') }}. Sent by ACS HMS </field>
        </record>

        <record id="base.main_company" model="res.company">
            <field name="patient_registartion_sms_template_id" ref="patient_registartion_sms_template"/>
            <field name="appointment_registartion_sms_template_id" ref="appointment_registartion_sms_template"/>
            <field name="acs_reminder_sms_template_id" ref="acs_reminder_sms_template"/>
        </record>

    </data>
</odoo>