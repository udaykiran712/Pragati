<?xml version="1.0"?>
<odoo>
    <record id="sh_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sh_pos_order_list</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="pos_interface_section" position="after">
                <h2>Multi Warehouse Configuration</h2>
                <div class="row mt16 o_settings_container" >
                    <div class="col-xs-6 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_sh_enable_multi_warehouse"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <div>
                                <label for="pos_sh_enable_multi_warehouse" />
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6 col-md-6 o_setting_box" attrs="{'invisible': [('pos_sh_enable_multi_warehouse','!=',True)]}">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <div>
                                <label for="pos_sh_stock_type" />
                                <field name="pos_sh_stock_type" />
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6 col-md-6 o_setting_box" attrs="{'invisible': [('pos_sh_enable_multi_warehouse','!=',True)]}">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <div>
                                <label for="pos_sh_warehouse_tags" />
                                <field name="pos_sh_warehouse_tags" widget="many2many_tags" attrs="{'required': [('pos_sh_enable_multi_warehouse','=',True)]}" />
                            </div>
                          
                        </div>
                    </div>
                </div>

                <div class="row mt16 o_settings_container" attrs="{'invisible': [('pos_sh_enable_multi_warehouse','!=',True)]}">
                    <div class="col-xs-6 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_sh_picking_sate" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_sh_picking_sate" />
                        </div>
                    </div>
                    <div class="col-xs-6 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_sh_negative_selling" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_sh_negative_selling" />
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
