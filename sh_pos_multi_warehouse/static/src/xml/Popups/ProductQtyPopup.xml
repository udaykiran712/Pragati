<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="ProductQtyPopup" owl="1">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-text popup-lg product-configurator-popup sh_qty_popup sh_multi_warehouse_text_popup" >
                <header class="title">
                    <t t-esc="props.title" />
                </header>
                <div class="main-body touch-scrollable scrollable-y div_wh_qty">
                    <table width="100%" class="wh_qty">
                        <thead>
                            <th width="50%" class="head_td">Warehouse</th>
                            <th width="30%" class="head_td">Available</th>
                            <th width="20%" class="head_td">Qty</th>
                        </thead>
                        <tbody>
                            <t t-foreach="props.product_warehouse_data" t-as="each_warehouse" t-key="each_warehouse.lot_stock_id">
                                <tr t-att-data-id="each_warehouse.lot_stock_id">
                                    <td class="data_td">
                                        <t t-esc="each_warehouse.warehouse_name" />
                                    </td>
                                    <td class="data_td data_qty">
                                        <t t-esc="each_warehouse.value" />
                                    </td>
                                    <td class="data_td">
                                        <t t-if='!env.pos.config.sh_negative_selling and env.pos.config.sh_enable_multi_warehouse'>
                                            <t t-if='each_warehouse.value &gt; 0 '>
                                                <input type="text" class="qty_input_tag" t-on-keyup="myFunction" />
                                            </t>
                                        </t>
                                        <t t-else=''>
                                            <input type="text" class="qty_input_tag" t-on-keyup="myFunction" />
                                        </t>
                                    </td>
                                </tr>
                            </t>                            
                        </tbody>
                        <tfoot>
                            <tr>
                                <th width="50%" class="footer_td">Total</th>
                                <th width="30%" class="footer_td"><t t-esc="props.product_warehouse_data_total.total" /></th>
                                <th width="20%" class="footer_td"></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <footer class="footer">
                    <div class="button confirm highlight" t-on-click="add_to_cart">Add to Cart</div>
                    <div class="button cancel" t-on-click="cancel">
                        Cancel
                    </div>
                </footer>
            </div>
        </div>
    </t>
</templates>
