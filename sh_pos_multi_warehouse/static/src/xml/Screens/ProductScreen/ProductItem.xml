<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ProductItem" t-inherit="point_of_sale.ProductItem" t-inherit-mode="extension" owl="1">
        <xpath expr="//span[hasclass('price-tag')]" position="before">
            <t t-if="props.product.detailed_type=='product' and env.pos.config.sh_enable_multi_warehouse">
                <t t-if="props.product.sh_pos_stock">
                    <span class="sh_warehouse_display"><t t-esc="props.product.sh_pos_stock" /></span>
                </t>
                <t t-else="">
                    <span class="sh_warehouse_display less_qty">0</span>
                </t>
            </t>
        </xpath>
    </t>
</templates>
