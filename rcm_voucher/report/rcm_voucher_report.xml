<odoo>
    <template id="report_rcm_voucher">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <style type="text/css">
                            .table-ar {
                                width: 100%;
                            }
                            .table-ar th,
                            .table-ar td {
                                word-wrap: break-word;
                            }
                        </style>
                        <!-- Header -->
                        <h2 style="text-align: center;">PRAGATI GREEN MEADOWS AND RESORTS LTD</h2>
                        <h3 style="text-align: center;">RCM VOUCHER</h3>

                        <!-- Voucher Details -->
                        <table style="width: 100%; margin-bottom: 20px;">
                            <tr>
                                <td>
                                    <strong>RCM No:</strong>
                                    <span t-field="doc.document_number"/>
                                </td>
                                <td>
                                    <strong>Date:</strong>
                                    <span t-field="doc.date"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Vendor:</strong>
                                    <span t-field="doc.partner_id.name"/>
                                </td>
                                <td>
                                    <strong>Bill No:</strong>
                                    <span t-field="doc.bill_number"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Bill Date:</strong>
                                    <span t-field="doc.bill_date"/>
                                </td>
                                <td>
                                    <strong>GSTIN No:</strong>
                                    <span t-field="doc.partner_id.vat"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>State:</strong>
                                </td>
                                <td>
                                    <strong>State Code:</strong>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Payment Terms:</strong>
                                    <span t-field="doc.payment_terms_id.name"/>
                                </td>
                            </tr>
                        </table>

                        <!-- Item Table -->
                        <table class="table table-bordered" style="width: 100%; border-collapse: collapse;">
                            <thead>
                                <tr>
                                    <th>S No</th>
                                    <th>Product</th>
                                    <th>HSN/SAC Code</th>
                                    <th>Qty</th>
                                    <th>UOM</th>
                                    <th>Rate</th>
                                    <th>Value (Rs)</th>
                                    <th>CGST %</th>
                                    <th>SGST %</th>
                                    <th>IGST %</th>
                                    <th>Cess Value</th>
                                    <th>Remarks</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="total" t-value="1"/>
                                <t t-foreach="doc.service_completion_line_ids" t-as="line">
                                    <tr>
                                        <td><t t-if="line.product_id.name"/><t t-esc="line.product_id.name"/></td>
                                        <td><t t-if="line.description"/><t t-esc="line.description"/></td>
                                        <td><t t-if="line.quantity"/><t t-esc="line.quantity"/></td>
                                        <td><t t-if="line.product_uom_id.name"/><t t-esc="line.product_uom_id.name"/></td>
                                        <td><t t-if="line.price_unit"/><t t-esc="line.price_unit"/></td>
                                        <td><t t-if="line.price_subtotal"/><t t-esc="line.price_subtotal"/></td>
                                        <p>
                                            <t t-foreach="record.taxes_id" t-as="tax">
                                                <t t-if="tax.name"/>
                                                <t t-esc="tax.name"/>
                                                <t t-unless="tax==record.taxes_id[-1]">,</t>
                                            </t>
                                        </p>

                                        <td><t t-if="record.remarks"/><t t-esc="record.remarks"/></td>
                                    </tr>
                                    <t t-set="total" t-value="total + 1"/>
                                </t>
                            </tbody>
                        </table>

                        <!-- Totals -->
                        <div style="border: 2px solid black; width: 980px; height: 310px; display: flex;">
                            <div style="flex: 1; float:left; width: 500px; height: 0px; padding-top:25px;padding-left:25px;">
                                <label>
                                    <b>Narration:</b>
                                </label>
                                <p>
                                    <t t-esc="doc.service_narration"/>
                                </p>
                                <b>Payment Terms:</b>
                                <span>
                                    <t t-esc="doc.payment_terms_id.name"/>
                                </span>
                                <br/>
                                <!-- <b>Delivery Terms:</b> <span><t t-esc="doc.delivery_terms_id.delivery_terms"/></span><br/> -->
                                <label>
                                    <b>Terms and Conditions:</b>
                                </label>
                                <p>
                                    <t t-esc="doc.terms"/>
                                </p>
                                <br/>
                                <br/>
                                <!-- Transport -->
                            </div>
                            <div style="float:right; margin-left: auto;">
                                <table style="border: 2px solid black; width: 400px; height: 150px; padding-left:25px;">
                                    <tr>
                                        <td style="text-align: left; padding-left: 5px; padding-top: 10px;">
                                            <p>
                                                <b>Untaxed Amount:</b>
                                            </p>
                                        </td>
                                        <td style="text-align: right; padding-right: 5px; padding-top: 10px;">
                                            <p>
                                                <t t-esc="doc.total_wo_tax"/>
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: left; padding-left: 5px; padding-top: 10px;">
                                            <p>
                                                <b>CGST Amount:</b>
                                            </p>
                                        </td>
                                        <td style="text-align: right; padding-right: 5px; padding-top: 10px;">
                                            <p>
                                                <t t-esc="doc.cgst_tax"/>
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: left; padding-left: 5px; padding-top: 10px;">
                                            <p>
                                                <b>SGST Amount:</b>
                                            </p>
                                        </td>
                                        <td style="text-align: right; padding-right: 5px; padding-top: 10px;">
                                            <p>
                                                <t t-esc="doc.sgst_tax"/>
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: left; padding-left: 5px; padding-top: 10px;">
                                            <p>
                                                <b>IGST Amount:</b>
                                            </p>
                                        </td>
                                        <td style="text-align: right; padding-right: 5px; padding-top: 10px;">
                                            <p>
                                                <t t-esc="doc.igst_tax"/>
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: left; padding-left: 5px; padding-top: 10px;">
                                            <p>
                                                <b>Discount Amount:</b>
                                            </p>
                                        </td>
                                        <td style="text-align: right; padding-right: 5px; padding-top: 10px;">
                                            <p>
                                                <t t-esc="doc.discount_total"/>
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: left; padding-left: 5px; padding-top: 10px;">
                                            <p>
                                                <b>Total Amount:</b>
                                            </p>
                                        </td>
                                        <td style="text-align: right; padding-right: 5px; padding-top: 10px;">
                                            <p>
                                                <t t-esc="doc.total_amount"/>
                                            </p>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>


                        <!-- Footer -->
                        <div style="margin-top: 30px;">
                            <!--                        <p><strong>Amount In Words:</strong> <t t-esc="doc.amount_words"/></p>-->
                            <p>
                                <strong>Remarks:</strong>
                                <t t-esc="doc.narration"/>
                            </p>
                        </div>
                        <br/>
                        <div style="text-align: right;">
                            <p>For PRAGATI GREEN MEADOWS AND RESORTS LTD</p>
                            <p>______________________</p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
