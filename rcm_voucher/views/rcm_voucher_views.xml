<odoo>
    <!-- Sequence for Document Number -->
        <record id="sequence_rcm_voucher" model="ir.sequence">
            <field name="name">RCM Voucher</field>
            <field name="code">rcm.voucher</field>
            <field name="prefix">RCM/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
        </record>
    <!-- RCM Voucher Form View -->
    <record id="view_rcm_voucher_form" model="ir.ui.view">
        <field name="name">rcm.voucher.form</field>
        <field name="model">rcm.voucher</field>
        <field name="arch" type="xml">
            <form string="RCM Voucher">
                <sheet>
                    <group>
                        <group>
                            <field name="document_number" readonly="1"/>
                            <field name="purchase_account_id"/>
                            <field name="update_stock"/>
<!--                            <field name="due_date"/>-->
                            <field name="cost_centre_id"/>
<!--                            <field name="narration"/>-->
                            <field name="place_of_supply"/>
                            <field name="tds_amount"/>
<!--                            <field name="date"/>-->
                            <field name="tds_vno"/>
                            <field name="partner_id"/>
<!--                            <field name="branch_id"/>-->
<!--                            <field name="department_id"/>-->
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="due_date"/>
                            <field name="bill_date"/>
                            <field name="igst_amount"/>
                            <field name="delivery_terms"/>
                            <field name="field_date"/>
                            <field name="tds_bill_account_id"/>
                            <field name="bill_number"/>
                            <field name="place_of_supply"/>
                            <field name="payment_terms_id"/>
                            <field name="narration"/>
                            <field name="attachment" string="Attachment" widget="binary" filename="attachment_filename"/>
                            <span><button name="open_pdf_viewer" string="View" type="object" class="btn-secondary"/></span>
<!--                            <field name="attachment_filename" invisible="1"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line_ids">
                                <tree editable="bottom">
                                    <field name="voucher_id"/>
                                    <field name="service_order_id"/>
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="last_purchase_cost"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="taxes_id"/>
                                    <field name="product_uom_id"/>
                                    <field name="discount_type"/>
                                    <field name="discount_amount"/>
                                    <field name="discounted_amount"/>
                                    <field name="voucher_id"/>
                                    <field name="service_order_id"/>
                                    <field name="item"/>
                                    <field name="specifications"/>
                                    <field name="unit"/>
                                    <field name="quantity"/>
                                    <field name="l_service_completion"/>
                                    <field name="gross"/>
                                    <field name="discount"/>
                                    <field name="other_discount"/>
                                    <field name="freight"/>
                                    <field name="cgst"/>
                                    <field name="sgst"/>
                                    <field name="igst"/>
                                    <field name="rfq_no"/>
                                    <field name="rfq_date"/>
                                    <field name="pq_no"/>
                                    <field name="pq_date"/>
                                    <field name="po_no"/>
                                    <field name="po_date"/>
                                    <field name="mrn_no"/>
                                    <field name="mrn_date"/>
                                    <field name="type_of_purchase"/>
                                    <field name="price_tax_subtotal"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_post" string="Post" type="object" class="btn-primary"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,posted"/>
                    </footer>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- RCM Voucher Tree View -->
    <record id="view_rcm_voucher_tree" model="ir.ui.view">
        <field name="name">rcm.voucher.tree</field>
        <field name="model">rcm.voucher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="document_number"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Action to open RCM Voucher Form or Tree View -->
    <record id="action_rcm_voucher" model="ir.actions.act_window">
        <field name="name">RCM Vouchers</field>
        <field name="res_model">rcm.voucher</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_rcm_voucher_tree"/>
        <field name="context">{}</field>
    </record>

    <!-- RCM Voucher Menu Item -->
    <menuitem id="menu_rcm_voucher_root" name="RCM Vouchers" sequence="10"/>
    <menuitem id="menu_rcm_voucher" parent="menu_rcm_voucher_root" name="RCM Vouchers" action="action_rcm_voucher" sequence="10"/>
</odoo>
