<odoo>

    <!-- ...............Action for completion menu.............. -->
    <record id="action_for_material_indent" model="ir.actions.act_window">
        <field name="name">Material Indent</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">material.indent</field>
        <field name="view_mode">tree,form,search,graph,pivot,activity</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                no records
            </p>
        </field>
    </record>


    <!-- ...............completion menu form view.............. -->
    <record id="view_for_material_indent_menu_form" model="ir.ui.view">
        <field name="name">material.indent.form</field>
        <field name="model">material.indent</field>
        <field name="arch" type="xml">
            <form string="Request For Materials">
                <header>
                    <button name="action_for_material_indent_submit" class="btn btn-primary" type="object"
                            string="Submit" states="draft"/>
                    <button name="action_approve" string="Approve" type="object" class="btn-primary" icon="fa-check"
                            attrs="{'invisible': [('show_approve_button', '=', False)]}"/>
                    <button name="action_reject" string="Reject" type="object" class="btn-primary" icon="fa-check"
                            attrs="{'invisible': [('show_reject_button', '=', False)]}"/>
                    <button type="object" class="btn-primary" name="issued_product" string="Create Issue"
                            states="approve"/>
                    <button name="order_cancel" class="btn btn-primary" type="object" string="Cancel"
                            states="draft,approve"/>
                    <button name="order_draft" class="btn btn-secondary" type="object" string="Draft" states="cancel"/>
                    <field name='state' widget="statusbar" statusbar_visible='draft,approve,complete,cancel'/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="request_owner_id" widget="many2one_tags" readonly="1"/>
                            <field name="currency_id" widget="many2one_tags"/>
                            <field name="transport"/>
                            <field name="service_narration"/>
                            <field name="shipping_address_id"/>
                            <field name="stock_picking_id"/>
                            <field name="partner_id" invisible="1"/>
                            <field name="close_indent" groups="material_and_pr_requistion.group_indent_purchase_admin"/>
                            <field name="show_approve_button" invisible="1"/>
                            <field name="show_reject_button" invisible="1"/>
                        </group>
                        <group>
                            <field name="complete_date"/>
                            <!-- <field name="material_indent_approval_id" widget="many2one_tags"/>
                            <field name="service_approval_status" widget="radio" options="{'horizontal':true}" states='draft'/> -->
                            <field name="expect_arrival"/>
                            <field name="company_id"/>
                            <field name="picking_type_id"/>
                            <field name="location_id"/>
                            <field name="location_dest_id"/>
                            <field name="department_id" string="Department"/>
                        </group>
                        <group string='Select Approvers Here'>
                            <field name='approval_level_1' attrs="{'readonly': [('approval_level_1', '!=', False)]}"
                                   force_save="1"/>
                            <field name='approval_level_2' attrs="{'readonly': [('approval_level_2', '!=', False)]}"
                                   force_save="1"/>
                            <field name='approval_level_3'/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Materials" name="used_for_material_indents" id="page_id_for_materials">
                            <field name="material_indent_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="last_purchase_cost"/>
                                    <field name="product_uom_id"/>
                                    <field name="remarks"/>
                                    <field name="product_uom_category_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ...............completion menu tree view.............. -->
    <record id="material_indent_tree_view" model="ir.ui.view">
        <field name="name">material.indent.tree</field>
        <field name="model">material.indent</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="complete_date"/>
                <field name="expect_arrival"/>
                <field name="company_id"/>
                <field name="transport"/>
                <field name="request_owner_id"/>
                <field name="state"/>
                <field name="service_approval_status" invisible="1"/>
            </tree>
        </field>
    </record>

    <menuitem id="mi_and_pr_main_menu_id" name="MI &amp; PR Requests"
              web_icon="material_and_pr_requistion,static/description/icon.png"/>

    <!-- ...............menu.............. -->
    <menuitem id="material_indent_menu_id" name="Material Indents" parent="mi_and_pr_main_menu_id"
              action="action_for_material_indent"/>
</odoo>                