<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="id_for_material_and_pr_requistion">
        <field name="name">Material Indent &amp; Purchase Requisition</field>
        <field name="description">Category for MI &amp; PR</field>
    </record>

    <record id="group_indent_purchase_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="id_for_material_and_pr_requistion"/>
    </record>

    <record id="group_indent_purchase_admin" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="id_for_material_and_pr_requistion"/>
        <field name="implied_ids" eval="[(6,0, [ref('material_and_pr_requistion.group_indent_purchase_user')])]"/>
    </record>

    <record id="rule_own_doc_of_material_indet" model="ir.rule">
        <field name="name">View Own Docs</field>
        <field name="model_id" ref="model_material_indent"/>
        <field name="domain_force">[('create_uid',
            '=', user.id)]
        </field>
        <field name="groups"
               eval="[(4, ref('material_and_pr_requistion.group_indent_purchase_user'))]"/>
    </record>

    <record id="rule_all_doc_material_indent" model="ir.rule">
        <field name="name">View All Docs</field>
        <field name="model_id" ref="model_material_indent"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups"
               eval="[(4, ref('material_and_pr_requistion.group_indent_purchase_admin'))]"/>
    </record>
    <record id="rule_own_doc_of_purchase_request" model="ir.rule">
        <field name="name">View Own Docs</field>
        <field name="model_id" ref="model_purchase_request"/>
        <field name="domain_force">[('create_uid',
            '=', user.id)]
        </field>
        <field name="groups"
               eval="[(4, ref('material_and_pr_requistion.group_indent_purchase_user'))]"/>
    </record>

    <record id="rule_all_doc_purchase_request" model="ir.rule">
        <field name="name">View All Docs</field>
        <field name="model_id" ref="model_purchase_request"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups"
               eval="[(4, ref('material_and_pr_requistion.group_indent_purchase_admin'))]"/>
    </record>
    <record model="ir.rule" id="material_indent_rule">
        <field name="name">Material Indent multi-company</field>
        <field name="model_id" search="[('model','=','material.indent')]" model="ir.model"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record model="ir.rule" id="purchase_request_rule">
        <field name="name">Purchase Request multi-company</field>
        <field name="model_id" search="[('model','=','purchase.request')]" model="ir.model"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record model="ir.rule" id="material_indent_line_rule">
        <field name="name">Material Indent Line multi-company</field>
        <field name="model_id" search="[('model','=','material.indent.line')]" model="ir.model"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record model="ir.rule" id="purchase_request_line_rule">
        <field name="name">Purchase Request Line multi-company</field>
        <field name="model_id" search="[('model','=','purchase.request.line')]" model="ir.model"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>

    
</odoo>