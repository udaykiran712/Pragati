        <template id="master_total_tax_totals" inherit_id="account.document_tax_totals">
            <xpath expr="//t[@t-as='subtotal']" position="before">
                <tr class="border-black">
                    <td>
                        <strong>Total Invoice amount</strong>
                    </td>
                    <td class="text-end">
                        <span t-field="o.master_total_amount"
                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </td>
                </tr>
                <tr t-if="o.total_discount > 0.0 ">
                    <td>
                        <strong>Total Discount</strong>
                    </td>
                    <td class="text-end">
                        <span t-field="o.total_discount"
                              t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                    </td>
                </tr>
            </xpath>
        </template>
