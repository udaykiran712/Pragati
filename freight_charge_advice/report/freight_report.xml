<odoo>
    <data>


        <template id="freight_charge_advice_report">
            <t t-call="web.basic_layout">
                <t t-foreach="docs" t-as="doc">
                    <div class="container">
                        <!-- Title Row -->
                        <div class="row">
                            GSTIN :
                            <span t-esc="env.company.company_registry"/>
                        </div>
                        <!--                        <div class="row">-->
                        <!--                            <div class="col-12">-->
                        <!--                                <h3>GADDIPATI FAMILY THRUST</h3>-->
                        <!--                            </div>-->
                        <!--                        </div>-->
                        <div class="row">
                            <div class="col-12">
                                <t t-if="env.company.name == 'Gaddipati Family Thrust'">
                                    <h3>Gaddipati Family Thrust</h3>
                                </t>
                                <t t-elif="env.company.name == 'PRAGATI BIO PHARMA PRIVATE LIMITED'">
                                    <h3>PRAGATI BIO PHARMA PRIVATE LIMITED</h3>
                                </t>
                                <t t-else="">
                                    <h3 t-esc="env.company.name"/>
                                </t>
                            </div>
                        </div>


                        <!-- Voucher Details Row -->
                        <div class="row">
                            <div class="col-12 text-center">
                                <h3>FD ADVISE VOUCHER</h3>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Left Side Table -->
                            <div class="col-6">
                                <table class="table">
                                    <tr>
                                        <td>
                                            <strong>Bank/Cash:</strong>
                                        </td>
                                        <td><!-- Add dynamic data here --></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Paid To:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="doc.account_id.name"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <!-- Right Side Table -->
                            <div class="col-6">
                                <table class="table">
                                    <tr>
                                        <td>
                                            <strong>Date:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="doc.date"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>V No:</strong>
                                        </td>
                                        <td>
                                            <span t-esc="doc.document_number"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Voucher Particulars Table -->
                        <div class="row">
                            <div class="col-12">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>
                                                <strong>Particulars</strong>
                                            </th>
                                            <th>
                                                <strong>Amount</strong>
                                            </th>
                                            <th>
                                                <strong>Remarks</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="doc.order_line_ids" t-as="line">
                                            <tr>
                                                <td>
                                                    <t t-esc="line.account_id.name"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line.amount"/>
                                                </td>
                                                <td>
                                                    <t t-esc="line.remarks"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <table class="table">
                                    <tr>
                                        <td>Vehicle No</td>
                                        <td>
                                            <span t-esc="doc.vehicle_number"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Rupees</td>
                                        <td>
                                            <span t-esc="doc.amount_in_word"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Amount</td>
                                        <td>
                                            <span t-esc="doc.amount"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <t t-set="authorized_user"
                           t-value="env['res.users'].search([('login', '=', 'ajay@pragatigroup.com')], limit=1)"/>

                        <div class="row">
                            <div class="col-6" style="margin-top:100px;">
                                Prepared By
                                <div>
                                    <t t-esc="doc.request_owner_id.name"/>
                                </div>
                            </div>
                            <div class="col-6" style="margin-top:100px;">
                                Authorized By
                                <div>
                                    <t t-esc="authorized_user.name"/>
                                </div>
                            </div>
                        </div>
                    </div>


                </t>

            </t>
        </template>

        <record id="report_freight_charge_advice" model="ir.actions.report">
            <field name="name">Payment Advice</field>
            <field name="model">freight.charge.advice</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">freight_charge_advice.freight_charge_advice_report</field>
            <field name="report_file">freight_charge_advice.freight_charge_advice_report</field>
            <field name="binding_type">report</field>
            <field name="binding_model_id" ref="model_freight_charge_advice"/>

        </record>


    </data>
</odoo>