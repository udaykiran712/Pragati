<odoo>
    <data>
        <!-- ...............Action for order menu.............. -->
        <record id="action_for_freight_charge_advice" model="ir.actions.act_window">
            <field name="name">Freight Charge Advice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">freight.charge.advice</field>
            <field name="view_mode">tree,form,search,graph,pivot,activity</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    no records
                </p>
            </field>
        </record>

        <!-- Sequence for Document Number -->
        <record id="sequence_freight_charge_advice" model="ir.sequence">
            <field name="name">Freight Charge Advice</field>
            <field name="code">freight.charge.advice</field>
            <field name="prefix">FCA/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
            <field name="number_increment">1</field>
            <field name="implementation">standard</field>
        </record>

        <!-- Freight Charge Advice Form View -->
        <record id="view_freight_charge_advice_form" model="ir.ui.view">
            <field name="name">freight.charge.advice.form</field>
            <field name="model">freight.charge.advice</field>
            <field name="arch" type="xml">
                <form string="Freight Charge Advice">
                    <header>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,submitted,approved,payment,rejected"/>

                        <!-- Submit Button -->
                        <button name="action_submit" type="object" string="Submit"
                                class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>

                        <!-- Approve Button -->
                        <button name="action_approve" type="object" string="Approve"
                                class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'submitted')]}"/>

                        <!-- Reject Button -->
                        <button name="action_reject" type="object" string="Reject"
                                class="btn-primary"
                                attrs="{'invisible': [('state', '!=', 'submitted')]}"/>
                        <button name="action_register_payment" type="object" string="Register Payment"
                                class="oe_highlight" states="approved"/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                            <button name="button_open_payments" type="object"
                                    class="oe_stat_button" icon="fa-bars"
                            >
                                <div class="o_form_field o_stat_info">
                                    <span class="o_stat_text">
                                        <field name='payments_count'/>
                                        Payments
                                    </span>
                                </div>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="document_number"/>
                                <field name="vehicle_number"/>
                                <!--                                <field name="invoice_id"/>-->
                                <field name="invoice_ids" widget="many2many_tags"/>
                                <field name="attachment" string="Attachment" widget="binary"
                                       filename="attachment_filename"/>
                                <span>
                                    <button name="open_pdf_viewer" string="View" type="object" class="btn-secondary"/>
                                </span>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="journal_id"/>
                                <field name="narration"/>
                                <field name="company_id"/>
                                <field name="account_id"/>
                                <field name="request_owner_id" widget="many2one_tags" readonly="1"/>
                                <field name="department_id"/>

                            </group>
                        </group>
                        <group string="Select Approver">
                            <field name="approval1_readonly" invisible="1"/>
                            <field name="approval2_readonly" invisible="1"/>
                            <field name="approval_level_1" attrs="{'readonly': [('approval1_readonly', '=', True)]}"
                                   force_save="1"/>
                            <field name="approval_level_2" attrs="{'readonly': [('approval2_readonly', '=', True)]}"
                                   force_save="1"/>
                            <field name="approval_level_3"/>
                        </group>
                        <notebook>
                            <page string="Order Lines">
                                <field name="order_line_ids">
                                    <tree editable="bottom">
                                        <field name="account_id"/>
                                        <field name="amount"/>
                                        <field name="remarks"/>
                                        <field name="product_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group>
                            <field name="terms" placeholder="Terms &amp; Conditions"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Freight Charge Advice Tree View -->
        <record id="view_freight_charge_advice_tree" model="ir.ui.view">
            <field name="name">freight.charge.advice.tree</field>
            <field name="model">freight.charge.advice</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="document_number"/>
                    <field name="vehicle_number"/>
                    <field name="date"/>
                    <field name="account_id"/>
                    <field name="request_owner_id"/>
                    <field name="company_id"/>
                    <!--                    <field name="vendor_name"/>-->
                    <!--                    <field name="date"/>-->
                    <field name="approval_level_1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_freight_charge_advice_search" model="ir.ui.view">
            <field name="name">freight.charge.advice.search</field>
            <field name="model">freight.charge.advice</field>
            <field name="arch" type="xml">
                <search>
                    <field name="document_number"/>
                    <field name="vehicle_number"/>
                    <field name="vendor_name"/>
                    <field name="company_id"/>
                    <filter string="Current Company" name="current_company"
                            domain="[('company_id', '=', context.get('allowed_company_ids', [False])[0])]"/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                    <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="Payment Complete" name="payment" domain="[('state', '=', 'payment')]"/>
                    <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                    <group string="Group By">
                        <filter name="group_by_company" string="Company" context="{'group_by': 'company_id'}"/>
                        <filter name="group_by_state" string="State" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>


        <!-- Freight Charge Advice Action -->
        <record id="action_freight_charge_advice" model="ir.actions.act_window">
            <field name="name">Freight Charge Advice</field>
            <field name="res_model">freight.charge.advice</field>
            <field name="view_mode">tree,form,graph,pivot,activity</field>
            <field name="view_id" ref="view_freight_charge_advice_tree"/>
            <field name="view_id" ref="view_freight_charge_advice_tree"/>
            <field name="search_view_id" ref="view_freight_charge_advice_search"/>
            <field name="domain">[('company_id', '=', context.get('allowed_company_ids', [False])[0])]</field>
            <field name="context">{'default_company_id': context.get('allowed_company_ids', [False])[0]}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No records
                </p>
            </field>
        </record>
        <record id="freight_charge_advice_company_rule" model="ir.rule">
            <field name="name">Freight Charge Advice: Filter by Company</field>
            <field name="model_id" ref="model_freight_charge_advice"/>
            <field name="domain_force">[('company_id', 'in', user.company_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Freight Charge Advice Menu Items -->
        <menuitem id="menu_freight_charge_advice_root" name="Freight Management" sequence="10"/>
        <menuitem id="menu_freight_charge_advice" name="Freight Charge Advice"
                  parent="bfa_and_pa_requests.bills_approval_main_menu_id" action="action_freight_charge_advice"
                  sequence="20"/>
    </data>
</odoo>
