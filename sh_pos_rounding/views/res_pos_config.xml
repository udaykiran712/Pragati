<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_pos_all_in_one_retail_configuration" model="ir.ui.view">
        <field name="name">sh.product.suggestion.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="pos_technical_section" position="after">


                <!-- <h2>Enable Rounding</h2> -->
                <div class="row mt16 o_settings_container">
                    <div style="font-size: 15px; font-weight: 600;">Enable Rounding</div>

                    <div class="col-xs-6 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_sh_enable_rounding"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_sh_enable_rounding"/>
                            <div class="text-muted">
                                Rounding pos order total.
                            </div>
                            <label for="pos_rounding_type"
                                   attrs="{'invisible':[('pos_sh_enable_rounding','=',False)],'required':[('pos_sh_enable_rounding','=',True)]}"/>
                            <field name="pos_rounding_type" widget="radio"
                                   attrs="{'invisible':[('pos_sh_enable_rounding','=',False)],'required':[('pos_sh_enable_rounding','=',True)]}"/>
                            <br/>
                            <label for="pos_round_product_id"
                                   attrs="{'invisible':[('pos_sh_enable_rounding','=',False)],'required':[('pos_sh_enable_rounding','=',True)]}"/>
                            <field name="pos_round_product_id"
                                   attrs="{'invisible':[('pos_sh_enable_rounding','=',False)],'required':[('pos_sh_enable_rounding','=',True)]}"/>
                        </div>
                    </div>
                </div>

            </div>
        </field>
    </record>
</odoo>